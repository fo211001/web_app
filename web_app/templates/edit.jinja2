{% extends 'mytemplate.jinja2' %}
{% block content %}
    <script type="text/javascript" src="//vk.com/js/api/openapi.js?98"></script>
    <script type="text/javascript">
        VK.init({apiId: 3778738, onlyWidgets: true});
    </script>
<form method="post">
    <center>
        <br><b>Название песни:</b>
            <input type="text" size="40" name="title" value= "{{ song_title }}">
        <b>Тональность:</b>
            <select name="base_chord">
                {% for tone in tones %}
                    <option value="{{ tone }}" {% if tone == base_chord %} selected {% endif %}>{{ tone }}</option>
                {% endfor %}
            </select>
        <b><input type="submit" value="Готово"></b>

        <br><textarea name="song_text" rows="20" cols="120">{{ song_text }}</textarea></br>
        <br><input type="submit" value="Сохранить" name="save">
        <b><input style=':right' type="submit" value="Удалить эту песню" name="delete_song"
                  onclick="return confirm('Правда-правда?')">

    </center>

    <center>
        <div id="vk_comments"></div>
        <script type="text/javascript">
            VK.Widgets.Comments("vk_comments", {limit: 10, width: "520", attach: "#"});
        </script>
        </p>
    </center>

 </form>

{% endblock %}
