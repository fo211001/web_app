{% extends 'mytemplate.jinja2' %}
{% block content %}


<form method="post" >
   <center>
       <h1>Пожалуйста, залогинтесь</h1>
       <input type="hidden" size="40" name="next" value="{{ next }}">
       <p><b>Введите логин:</b><br>
        <input type="text" size="40" name="email">
    <p><b>Введите пароль:</b><br>
        <input type="password" size="40" name="password">
    <Br><input type="submit" value="Войти">
   </center>
  </p>
    {% if failed_attempt %}
        <center><h2>Логин и пароль не подходят.</h2></center>
    {% endif %}
 </form>


{% endblock %}